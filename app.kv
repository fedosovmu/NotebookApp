<MainScreen>:
    GridLayout:
        rows: 3

        MDToolbar:
            title: app.title
            elevation: 10
            md_bg_color: app.theme_cls.primary_color

        FloatLayout:
            ScrollView:
                id: scroll_view
                do_scroll_x: False
                do_scroll_y: True

                MDList:
                    id: notes_list

            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'
                padding: 40

                MDFloatingActionButton:
                    icon: 'plus'
                    elevation: 10
                    on_press: root.create_note()

<NoteScreen>:
    GridLayout:
        rows: 2

        MDToolbar:
            title: root.title
            elevation: 10
            left_action_items: [['arrow-left', lambda x: app.go_to_main_screen()]]

        MDLabel:
            id: content_lable
            text: 'Content'
            halign: 'center'