<MainScreen>:
    GridLayout:
        rows: 2

        MDToolbar:
            title: app.title
            elevation: 10

        MDList:
            id: notes_list
            OneLineListItem:
                text: 'Test Item 1'
                on_press: app.go_to_note_screen()
            OneLineListItem:
                text: 'Test Item 2'
                on_press: root.main_screen_test()
            OneLineListItem:
                text: 'Test Item 3'
                on_press: root.load_list()

<NoteScreen>:
    GridLayout:
        rows: 2

        MDToolbar:
            title: 'Заметка'
            elevation: 10
            left_action_items: [['menu', lambda x: app.go_to_main_screen()]]

        MDLabel:
            text: 'Content'
            halign: 'center'